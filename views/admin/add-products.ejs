<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="/admin/css/add-products.css">
    <link rel="stylesheet" href="/admin/css/partial.css">
</head>
<body>
  <%-include('../partials/admin/header')%>
    <!-- Add Product Form -->
    <div class="form-container">
        <h2>Add Product</h2>
        <form>
            <!-- Product Name -->
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input type="text" id="productName" placeholder="Enter product name" />
            </div>

            <!-- Price -->
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="price" placeholder="Enter price" />
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" placeholder="Enter product description"></textarea>
            </div>

            <!-- Category -->
            <div class="form-group">
                <label for="category">Category</label>
                <select id="category">
                    <option value="electronics">Electronics</option>
                    <option value="fashion">Fashion</option>
                    <option value="home-appliances">Home Appliances</option>
                </select>
            </div>

            <!-- Images -->
            <div class="form-group">
                <label for="image1">Upload Image 1</label>
                <input type="file" id="image1" accept="image/*" />
            </div>
            <div class="form-group">
                <label for="image2">Upload Image 2</label>
                <input type="file" id="image2" accept="image/*" />
            </div>
            <div class="form-group">
                <label for="image3">Upload Image 3</label>
                <input type="file" id="image3" accept="image/*" />
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="submit-btn">Add Product</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>
