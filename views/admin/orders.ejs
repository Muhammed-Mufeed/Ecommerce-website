<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders - Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/css/orders.css">
    <link rel="stylesheet" href="/admin/css/partial.css">
    <!-- Add SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%-include('../partials/admin/header')%>
    <!-- Orders Page Content -->
    <div class="orders-page">
        <h3>Orders List</h3>

        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" id="order-search" placeholder="Search Orders..." value="<%= search %>">
        </div>

        <!-- Orders Table -->
        <table class="orders-table" id="orders-table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Total Price</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders.length > 0) { %>
                    <% orders.forEach((order, index) => { %>
                        <tr>
                            <td><%= (currentPage - 1) * 5 + index + 1 %></td>
                            <td><%= order.orderId %></td>
                            <td><%= order.user.email %></td>
                            <td>â‚¹<%= order.finalAmount.toFixed(2) %></td>
                            <td><%= new Date(order.createdAt).toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                            <td>
                                <a href="/admin/orders/<%= order._id %>" class="view-btn">View</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" style="text-align: center;">No orders found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- Pagination Section -->
        <% if (orders.length > 0) { %>
            <div class="pagination">
                <!-- Previous Button -->
                <% if (currentPage > 1) { %>
                    <a href="/admin/orders?page=<%= currentPage - 1 %>&search=<%= search %>" class="page-link">Previous</a>
                <% } %>

                <!-- Page Numbers -->
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/orders?page=<%= i %>&search=<%= search %>"
                      class="page-link <%= currentPage === i ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>

                <!-- Next Button -->
                <% if (currentPage < totalPages) { %>
                    <a href="/admin/orders?page=<%= currentPage + 1 %>&search=<%= search %>" class="page-link">Next</a>
                <% } %>
            </div>
        <% } %>
    </div>

    <script>
        // Add search functionality
        const searchInput = document.getElementById('order-search');
        let searchTimeout;

        searchInput.addEventListener('input', (e) => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                const searchValue = e.target.value.trim();
                window.location.href = `/admin/orders?search=${searchValue}&page=1`;
            }, 500); // Wait 500ms after user stops typing
        });
    </script>
</body>
</html>