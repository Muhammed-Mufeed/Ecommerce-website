<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/user/css/partial.css" />
    <link rel="stylesheet" href="/user/css/home.css" />

    <title>Home Page</title>
  </head>

<body>
  <%-include('../partials/user/header')%>
   <section class="header">
    <h1>Welcome to PackSmart</h1>
    <p>Your ultimate destination for packing products</p>
    <button>Start Shopping</button>
  </section>
  
  <section class="categories">
    <div class="categories-header">Shop by Categories</div>
    <% categories.forEach(category => { %>
      <div class="category">
        <img src="<%= category.image %>" alt="<%= category.name %>" />
        <span><%= category.name %></span>
      </div>
    <% }) %>

  </section>
  
  <section class="product-container">
    <h2 class="products-header">Products</h2>
    <div class="product-list">
        <div class="product-card">
            <img src="product1.jpg" alt="Product 1">
            <h3>Eco-friendly Travel Bag</h3>
            <div class="price">$39.99</div>
            <button>Add to Cart</button>
        </div>
        <div class="product-card">
            <img src="product2.jpg" alt="Product 2">
            <h3>Stackable Storage Box</h3>
            <div class="price">$29.99</div>
            <button>Add to Cart</button>
        </div>
        <div class="product-card">
            <img src="product2.jpg" alt="Product 3">
            <h3>Stackable Storage Box</h3>
            <div class="price">$29.99</div>
            <button>Add to Cart</button>
        </div>
        <div class="product-card">
            <img src="product2.jpg" alt="Product 4">
            <h3>Stackable Storage Box</h3>
            <div class="price">$29.99</div>
            <button>Add to Cart</button>
        </div>
        <!-- Add more product cards as needed -->
    </div>
  </section>

  <%-include('../partials/user/footer')%>

</body>
</html>
